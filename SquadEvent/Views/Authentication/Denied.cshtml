@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "Accès refusé";
}

@section Title { <h1><span>@ViewData["Title"]</span></h1> }

@if (User?.Identity?.IsAuthenticated ?? false)
{
    <p>Vous n'avez pas les droits requis pour accéder à cette page.</p>
}
else
{
    <p>Vous devez vous <a asp-action="SignIn">connecter</a> pour accéder à cette page.</p>
}