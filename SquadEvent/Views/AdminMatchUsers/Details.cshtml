@model SquadEvent.Entities.MatchUser

@{
    ViewData["Title"] = Model.User.Name;
}

@section NavBar  {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="@ControllersName.AdminMatchs" asp-action="Index">Administration</a></li>
            <li class="breadcrumb-item"><a asp-controller="@ControllersName.AdminMatchs" asp-action="Details" asp-route-id="@Model.Match.MatchID">@Model.Match.Name</a></li>
            @if (Model.Side != null)
            {
                <li class="breadcrumb-item">@Model.Side.Name</li>
            }
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
}

@section Title { <h1><span>@ViewData["Title"]</span></h1> }

<div>
    <h4>Participant</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Match)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Match.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Side)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Side.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>Carte</th>
                <th colspan="2">Armée</th>
                <th colspan="2">Squad</th>
                <th colspan="2">Rôle</th>
                <th colspan="2">Kit</th>
                <th>Libellé</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var slot in Model.Slots)
            {
            <tr>
                <td>@slot.Squad.Side.Round.GameMap.Name</td>
                <td><img src="@ViewHelper.Icon(slot.Squad.Side.Faction)" alt="" width="32" /></td>
                <td>@Html.DisplayFor(m => slot.Squad.Side.Faction)</td>
                <td><a  asp-controller="@ControllersName.AdminSquads" asp-action="Details" asp-route-id="@slot.RoundSquadID" class="badge badge-dark">@slot.Squad.Number</a></td>
                <td><a asp-controller="@ControllersName.AdminSquads" asp-action="Details" asp-route-id="@slot.RoundSquadID">@slot.Squad.Name</a></td>
                <td><img src="@ViewHelper.Icon(slot.Role)" width="11" /></td>
                <td>@Html.DisplayFor(m => slot.Role)</td>
                <td><img src="@ViewHelper.Icon(slot.AssignedKit)" width="32" /></td>
                <td>@Html.DisplayFor(m => slot.AssignedKit)</td>
                <td>@slot.Label</td>
            </tr>
            }
        </tbody>
    </table>
</div>
<p>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.MatchUserID">Modifier</a>
    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.MatchUserID">Exclure</a>
</p>