<div>
    @foreach (var round in Model.Rounds)
    {
        <h3>@(round.GameMap?.Name ?? "Destination inconnue")</h3>
        <hr />

        <div class="row" style="margin-bottom:2em;">
            @foreach (var side in round.Sides)
            {
            <div class="col-md-6">
                @if (side.Faction != null)
                {
                    <h4 class="text-center"><img src="~/img/factions/@(side.Faction.ToString()).png" alt="" width="64" /><br />@Html.DisplayFor(m => @side.Faction)<br />@side.MatchSide.Name</h4>
                }
                else
                {
                    <h4 class="text-center"><img src="~/img/factions/none.png" alt="" width="64" /><br />Armée inconnue<br />@side.MatchSide.Name</h4>
                }

                <div class="d-flex">
                    <div class="mr-1">
                        <a class="btn btn-sm btn-secondary" href="#">Créer une squad</a>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dupliquer depuis...</button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Dupliquer depuis un autre événement</a>
                            @if (round.Number > 1)
                            {
                                <a class="dropdown-item" href="#">Dupliquer depuis la carte précédente</a>
                            }
                        </div>
                    </div>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Squad</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
            }
        </div>
    }
</div>
