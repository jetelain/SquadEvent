@model SquadEvent.Entities.RoundSquad

@{
    ViewData["Title"] = Model.Name;
}

@section NavBar  {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="@ControllersName.AdminMatchs" asp-action="Index">Evénements</a></li>
            <li class="breadcrumb-item"><a asp-controller="@ControllersName.AdminMatchs" asp-action="Details" asp-route-id="@Model.Side.MatchSide.Match.MatchID">@Model.Side.MatchSide.Match.Name</a></li>
            <li class="breadcrumb-item">@Model.Side.MatchSide.Name</li>
            <li class="breadcrumb-item">Carte @Model.Side.Round.Number : @Model.Side.Round.GameMap.Name</li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
}

@section Title { <h1><span>@ViewData["Title"]</span></h1> }

<div>
    <h4>Information générales</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Side.MatchSide)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Side.MatchSide.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Side)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Side.Faction != null)
            {
                <img src="~/img/factions/@(Model.Side.Faction.ToString()).png" alt="" width="32" />
            }
            @Html.DisplayFor(model => model.Side.Faction)
        </dd>
        @if (Model.RestrictTeamComposition || Model.InviteOnly)
        {
            <dt class="col-sm-2">
                Restrictions
            </dt>
            <dd class="col-sm-10">
                @if (Model.RestrictTeamComposition)
                {
                    @Html.DisplayNameFor(model => model.RestrictTeamComposition)
                }
                @if (Model.InviteOnly)
                {
                    @if (Model.RestrictTeamComposition)
                    {
                        <br />
                    }
                    @Html.DisplayNameFor(model => model.InviteOnly)
                }
            </dd>
        }
    </dl>
</div>
<p>
    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@Model.RoundSquadID">Modifier</a>
</p>
<div>
    <h4>Emplacements</h4>
    <hr />

    <p><a class="btn btn-sm btn-outline-primary" href="#">Lien d'invitation</a></p>

    <table class="table">
        <colgroup>
            <col width="100" />
            <col width="40" />
            <col width="200" />
        </colgroup>
        <thead>
            <tr>
                <th>Rôle</th>
                <th colspan="2">Kit</th>
                <th>Libellé</th>
                <th>Inscrit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var slot in Model.Slots)
            {
                <tr>
                    <td>@Html.DisplayFor(m => slot.Role)</td>
                    <td>
                        @if (slot.AssignedKit != null)
                        {
                            <img src="~/img/kits/@(slot.AssignedKit.ToString()).png" width="32" />
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(m => slot.AssignedKit)
                    </td>
                    <td>@Html.DisplayFor(m => slot.Label)</td>
                    <td>@Html.DisplayFor(m => slot.AssignedUser.User.Name)</td>
                </tr>
            }
        </tbody>

    </table>


</div>