@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SquadEvent</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link href="https://stackpath.bootstrapcdn.com/bootswatch/4.4.1/slate/bootstrap.min.css" rel="stylesheet" integrity="sha384-G9YbB4o4U6WS4wCthMOpAeweY4gQJyyx0P3nZbEBHyz+AtNoeasfRChmek1C2iqV" crossorigin="anonymous" />
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Source+Sans+Pro%7CRoboto%7CRoboto&#038;ver=1.0.0" />
    <link rel="stylesheet" href="//use.fontawesome.com/releases/v5.0.6/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SquadEvent</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="@ControllersName.Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="@ControllersName.Events" asp-action="Index">Événements</a>
                        </li>
                        @if ((await AuthorizationService.AuthorizeAsync(User, "Admin")).Succeeded)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" asp-area="" asp-controller="@ControllersName.Home" asp-action="Index" id="configDropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Administration
                                </a>
                                <div class="dropdown-menu" aria-labelledby="configDropdownMenu">
                                    <a class="dropdown-item" asp-area="" asp-controller="@ControllersName.AdminMatchs" asp-action="Index">Événements</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="@ControllersName.AdminGameLayouts" asp-action="Index">Layouts</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="@ControllersName.AdminGameMaps" asp-action="Index">Maps</a>
                                </div>
                            </li>
                        }

                    </ul>
                    <form class="form-inline">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <span class="mr-sm-2" style="font-size:80%">@User.Identity.Name</span>
                            <a asp-controller="@ControllersName.Authentication" asp-action="SignOut" class="btn btn-sm btn-outline-secondary" title="@User.Identity.Name">
                                Se déconnecter
                            </a>
                        }
                        else
                        {
                            <a asp-controller="@ControllersName.Authentication" asp-action="SignIn" class="btn btn-sm btn-outline-secondary">Se connecter</a>
                        }
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="title @ViewData["TitleClass"]" style="@ViewData["TitleStyle"]">
        <div class="container">
            @RenderSection("Title", required: false)
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderSection("NavBar", required: false)
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2020 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Mentions légales</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
